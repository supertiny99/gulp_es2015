{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "arrowFunctions": true,
      "blockBindings": true,
      "classes": true,
      "defaultParams": true,
      "destructuring": true,
      "forOf": true,
      "modules": true,
      "objectLiteralComputedProperties": true,
      "objectLiteralShorthandMethods": true,
      "objectLiteralShorthandProperties": true,
      "resetParams": true,
      "spread": true,
      "superInFunction": true,
      "templateStrings": true,
      "unicodeCodePointEscapes": true
    }
  },

  "rules": {
    "no-console": 0,
    "no-control-regex": 0,
    "no-debugger": 0,
    "block-scoped-var": 0,
    "consistent-return": 0,
    "dot-location": 0,
    "no-extra-parens": 1,
    "no-inner-declarations": 1,
    "no-unreachable": 1,
    "no-caller": 1,
    "no-alert": 1,
    "no-extend-native": 1,
    "complexity": [1, 5],
    "no-implicit-coercion": 1,
    "no-implicit-globals": 1,
    "valid-jsdoc": 2,
    "comma-dangle": [2, "never"],
    "no-cond-assign": 2,
    "no-constant-condition": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty": 2,
    "no-empty-character-class": 2,
    "no-ex-assign": 2,
    "no-extra-boolean-cast": 2,
    "no-extra-semi": 2,
    "no-func-assign": 2,
    "no-invalid-regexp": 2,
    "no-irregular-whitespace": 2,
    "no-negated-in-lhs": 2,
    "no-obj-calls": 2,
    "no-regex-spaces": 2,
    "no-sparse-arrays": 2,
    "no-unexpected-multiline": 2,
    "use-isnan": 2,
    "valid-typeof": 2,
    "curly": [2, "all"],
    "eqeqeq": [2, "allow-null"],
    "guard-for-in": 2,
    "no-case-declarations": 2,
    "no-div-regex": 2,
    "no-else-return": 2,
    "no-eq-null": 2,
    "no-extra-bind": 2,
    "no-fallthrough": 2,
    "no-floating-decimal": 2,
    "no-implied-eval": 2,
    "no-invalid-this": 2,
    "no-labels": [2, {"allowLoop": false, "allowSwitch": false}],
    "no-lone-blocks": 2,
    "no-loop-func": 2,
    "no-magic-numbers": [0, {"ignore": [1], "ignoreArrayIndexes": true }],
    "no-multi-spaces": 2,
    "no-multi-str": 0,
    "no-native-reassign": 2,
    "no-new": 2,
    "no-new-func": 2,
    "no-new-wrappers": 2,
    "no-octal": 2,
    "no-octal-escape": 0,
    "no-proto": 2,
    "no-redeclare": [2, {"builtinGlobals": true}],
    "no-return-assign": [2, "always"],
    "no-script-url": 2,
    "no-self-assign": 2,
    "no-self-compare": 2,
    "no-sequences": 2,
    "no-throw-literal": 2,
    "no-unmodified-loop-condition": 2,
    "no-unused-expressions": [2, {"allowShortCircuit": true, "allowTernary": true}],
    "no-unused-labels": 2,
    "no-useless-call": 2,
    "no-useless-concat": 2,
    "no-void": 2,
    "no-warning-comments": [2, {"terms": ["todo", "fixme", "any other term"], "location": "anywhere"}],
    "no-with": 2,
    "radix": 2,
    "vars-on-top": 2,
    "wrap-iife": 2,
    "yoda": 2,
    "no-unused-vars": 1,
    "no-use-before-define": 2,

    "camelcase": 2,
    "comma-spacing": [2, {"before": false, "after": true}],
    "comma-style": [2, "last"],
    "computed-property-spacing": [2, "never"],
    "consistent-this": [0, "self"],
    "eol-last": 2,
    "func-names": 2,
    "id-blacklist": [2, "data", "err", "e", "cb", "callback"],
    "indent": [2, 2],
    "key-spacing": [2, {"beforeColon": false, "afterColon": true}],
    "linebreak-style": 0,
    "lines-around-comment": 2,
    "max-depth": [2, 4],
    "max-params": [2, 3],
    "max-statements": [2, 10],
    "new-cap": 2,
    "new-parens": 2,
    "newline-after-var": 2,
    "newline-before-return": 2,
    "newline-per-chained-call": 2,
    "no-array-constructor": 2,
    "no-bitwise": 2,
    "no-continue": 2,
    "no-inline-comments": 2,
    "no-lonely-if": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-multiple-empty-lines": [2, {"max": 2}],
    "no-negated-condition": 2,
    "no-nested-ternary": 2,
    "no-new-object": 2,
    "no-plusplus": 0,
    "no-spaced-func": 2,
    "semi": [2, "always"],
    "space-before-blocks": [2, "always"],
    "space-before-function-paren": [2, "never"],
    "space-in-parens": [2, "never"]

  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  }

}
